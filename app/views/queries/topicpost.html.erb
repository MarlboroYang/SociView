<div class="search_list">
  <div class="container">
    <div class="row">
      <h2 class="w-full text-center pb-2 bg-blue-400 rounded-t-lg p-2 text-white text-xl">自動化議題</h2>
      <div class="search_all">
        <p id="count">查詢結果：<%= @count %>筆</p>
        <p id="theme">查詢主題：<%= @theme.to_s.gsub(/[\[\]\"]/, "") %></p>
        <p id="start">起始時間：<%= @start %></p>
        <p id="end">結束時間：<%= @end %></p>
        <p id="source">資料來源：<%= @source.to_s.gsub(/[\[\]\"]/, "") %></p>
        <p id="type">資料種類：<%= @type.to_s.gsub(/[\[\]\"]/, "") %></p>
      </div>
    </div>
  </div>
  <div class="chart">
    <div class="text-red-500 pl-1"><%= @topic %></div>
    <% if FileTest.exist?("#{Rails.root}/app/views/shared/_ldavis.html") %>
      <%= render "shared/ldavis.html" %>
    <% end %>
  </div>
</div>